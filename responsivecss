
.o_cp_sidebar .o_dropdown:nth-last-child(2) button{
        width: 32px;
        overflow: hidden;
        margin-right: 5px;
        border-bottom-left-radius: 3px !important;
        border-top-left-radius: 5px !important;
    }
.o_cp_sidebar .o_dropdown:nth-last-child(2) button::before {
    font-family: FontAwesome;
    margin-right: 14px;
    content: "\f0c6";
	}

window.document.onload = function(e){
var mobile = document.createElement('div');
mobile.className = 'icon';
mobile.innerHTML='More<span class="caret"></span>';
mobile.onclick=function(){
    var x = document.querySelector('.nav-tabs');
    if (x.className === "nav-tabs") {
        x.className += " responsive";
    } else {
        x.className = "nav-tabs";
    }
	};
document.querySelector('.nav-tabs').appendChild(mobile);
}

.nav-tabs .icon {
  display: none;
  font-size: 16px;
  color: #337ab7;
}

@media screen and (max-width: 768px) {
  .nav-tabs.responsive {position: relative;}
  .nav-tabs.responsive .icon {
    position: absolute!important;
    right: 0;
    top: 0;
  }
  
  .nav-tabs.responsive li {
    float: none!important;
    display: block!important;
    text-align: left!important;
  }
}


@media screen and (max-width: 768px) {
    .nav-tabs li:not(:first-child) {display: none;}
    .nav-tabs div.icon {
    float: right!important;
    display: block!important;
    border-color: #ccc;
	}
}

.nav-tabs {
  overflow: hidden!important;
}

.nav-tabs li {
  float: left;
  display: block;
  color: #f2f2f2;
  text-align: left;
  padding: 10px 0px;
  text-decoration: none;
  font-size: 16px;
}
